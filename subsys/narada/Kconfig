config NARADA
	bool "Home Automation Narada library"
	default y
	depends on DT_HAS_GORDIOS_NARADA_ENABLED && JSON_LIBRARY && COAP_CLIENT
	help
	  This library provides a CoAP client and server API
	  for creating Home Automation devices and for controlling them.

if NARADA

config NARADA_SERVICE
	bool "Narada service"
	default y if SMF
	depends on SMF && EVENTS
	help
	  Provide a service that manage the different events
	  that could affect Narada state such network disconnection.

config NARADA_SERVER
	bool
	depends on COAP && COAP_SERVER

config NARADA_MULTICAST_BUFFER_COUNT
	int "Number of multicast request buffers"
	default 2
	range 1 10
	help
	  Number of statically allocated buffers for multicast CoAP requests.
	  Each buffer can handle one concurrent multicast request.

config NARADA_MULTICAST_BUFFER_SIZE
	int "Size of each multicast request buffer in bytes"
	default 1024
	range 256 4096
	help
	  Size of each multicast buffer. Should be large enough to hold
	  CoAP packet headers, options, and payload.

module = NARADA
module-str = narada
source "subsys/logging/Kconfig.template.log_config"

rsource "light/Kconfig"

endif
